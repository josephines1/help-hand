<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item tools:ignore="StateListReachable">
        <shape android:shape="rectangle">

            <stroke android:color="#BBF7D0" android:width="2dp"/> <!-- Stroke color and width for the default state -->
            <corners android:radius="5dp" /> <!-- Corner radius for the default state -->
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#BBF7D0"/> <!-- Fill color for the pressed state -->
            <stroke android:color="#BBF7D0" android:width="2dp"/> <!-- Stroke color and width for the pressed state -->
            <corners android:radius="5dp" /> <!-- Corner radius for the pressed state -->
        </shape>
    </item>
</selector>
